{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDirs": ["src"],
    "strictNullChecks": true,
    "types": ["@types/jest"]
  },
  "lib": ["es2022"],
  "include": [
    "config/**/*.ts",
    "src/**/*.ts",
    "tests/**/*.ts",
    "bin/*.ts",
    "jest.config.js"
  ],
  "exclude": ["node_modules"],
  "watchOptions": {
    "excludeDirectories": ["node_modules"]
  }
}
